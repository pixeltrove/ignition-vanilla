{
  "name": "ignition-vanilla",
  "version": "1.0.0",
  "description": "A broad assortment of robust interface building blocks.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeltrove/ignition-vanilla.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run compile:css && npm run minify:css",
    "build:js": "npm run compile:js && npm run minify:js",
    "compile:css": "sass --no-source-map source/main.scss build/main.css",
    "compile:js": "esbuild --bundle --format=esm source/main.js --outfile=build/main.js",
    "minify:css": "sass --no-source-map --style=compressed build/main.css build/main.min.css",
    "minify:js": "esbuild --minify --format=esm build/main.js --outfile=build/main.min.js",
    "watch:css": "sass --watch --no-source-map source/main.scss build/main.css",
    "watch:js": "esbuild --watch --bundle --format=esm source/main.js --outfile=build/main.js"
  },
  "devDependencies": {
    "esbuild": "^0.10.1",
    "sass": "^1.32.8"
  }
}
